<%= form_with url: "/merchants/#{@merchant.id}/inventory_items/#{@item.id}", method: :patch, local: true do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name, value: @item.name %>
  <%= form.label :description %>
  <%= form.text_field :description, value: @item.description %>
  <%= form.label :inventory_count, 'Inventory Count' %>
  <%= form.text_field :inventory_count, value: @item.inventory_count %>
  <%= form.label :price %>
  <%= form.text_field :price, value: @item.price %>
  <%= form.submit "Edit Item"%>
<% end %>
