<h1>Inventory Items for <%= "#{@merchant.name}" %></h1>

<h3><%= link_to "Add New Item To Inventory", "/merchants/#{@merchant.id}/inventory_items/new" %></h3>
<hr>
<% @items.each do |item| %>
  <p>Item Name: <%= item.name %></p>
  <p>Description: <%= item.description %></p>
    <% if item.status == 'deleted' %>
      <p>Item Status: <%= item.status %></p>
      <p>Deletion Comments: <%= item.deletion_comments %></p>
      <p><%= link_to "Un-Delete #{item.name}", "/merchants/#{@merchant.id}/inventory_items/#{item.id}/un_delete", method: :patch%></p>
    <% else %>
      <p>Price: <%= number_to_currency(item.price) %></p>
      <p>Inventory Count: <%= item.inventory_count %></p>
      <p><%= link_to "Edit Details for #{item.name}", "/merchants/#{@merchant.id}/inventory_items/#{item.id}/edit" %></p>
      <p>Item Status: <%= item.status %></p>
      <p><%= link_to "Delete #{item.name} from Inventory", "/merchants/#{@merchant.id}/inventory_items/#{item.id}/delete_item"%></p>
    <% end  %>
  <hr>
<% end  %>
